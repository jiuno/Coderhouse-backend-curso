doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Prueba
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")   
        link(rel="stylesheet", type= "text/css", href="/styles.css")
        body
            h1 INGRESE PRODUCTO
            form(action="/productos" method="POST" id="formulario")
                .mb-3
                label.form-label(for="exampleInputEmail1") Producto 
                input.form-control#exampleInputEmail1(type="text", aria-describedby="emailHelp" name="title")
                .mb-3
                label.form-label(for="exampleInputPassword1") Precio
                input.form-control#exampleInputPassword1(type="text" name="price")
                .mb-3
                label.form-label(for="exampleInputPassword2") Foto URL 
                input.form-control#example(type="text" name="url")
                button.btn.btn-primary(type="submit" form="formulario" formmethod="post" ) Enviar
            div(id="prodTable") 
                h1 Vista de Productos 
                table(class="table table-striped",id="myTable")
                    if prod.length > 0
                        thead
                                tr
                                th(scope="col") id
                                th(scope="col") Title
                                th(scope="col") Price
                                th(scope="col") Picture
                        tbody(id="tbody")
                                each obj in prod
                                    tr
                                        th(scope="row")=obj.id
                                        td=obj.title 
                                        td=obj.price
                                        td=obj.url
                                    tr
                    else 
                        h2 NO HAY PRODUCTOS 
                a.btn.btn-primary(href="/productos", role="button" id="productos") Productos 
            script(src="/socket.io/socket.io.js") 
            script(src="/main.js")